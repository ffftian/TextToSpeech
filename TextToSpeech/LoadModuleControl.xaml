<UserControl x:Class="TextToSpeech.LoadModuleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TextToSpeech"
             mc:Ignorable="d" 
              Background="White"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>

        <GroupBox Header="文本" HorizontalAlignment="Left" Height="200" Margin="0,10,0,0" VerticalAlignment="Top" Width="782"/>
        <Label Content="载入文字" FontSize="14" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TextBox" HorizontalAlignment="Left" FontSize="14" Margin="81,81,0,0"  TextWrapping="NoWrap" VerticalAlignment="Top" Width="606" IsEnabled="False">
        </TextBox>
        <Label Content="已有玩家" FontSize="14" HorizontalAlignment="Left" Margin="10,123,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.485,0.214"/>
        <ComboBox Name="PlayerBox" HorizontalAlignment="Left" Margin="81,123,0,0" VerticalAlignment="Top" Width="314" RenderTransformOrigin="0.6,-0.143">
        </ComboBox>


        <Button Name="BrowseButton" Content="浏览" FontSize="14" Margin="701,81,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="42"/>
        <GroupBox Header="语音" HorizontalAlignment="Left" Height="225" Margin="0,215,0,0" VerticalAlignment="Top" Width="782"/>
        <Label Content="已有语音" FontSize="14" HorizontalAlignment="Left" Margin="25,315,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="VoiceBox" HorizontalAlignment="Left" Margin="96,315,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem>示例1</ComboBoxItem>
            <ComboBoxItem>示例2</ComboBoxItem>
            <ComboBoxItem>示例3</ComboBoxItem>
        </ComboBox>
       
        <TextBox Name="VoicePathBox" HorizontalAlignment="Left" FontSize="14" Margin="289,287,0,0"  TextWrapping="NoWrap" VerticalAlignment="Top" Width="407" IsEnabled="False"/>
        <Button Name="BrowseButton2" Content="浏览" FontSize="14" Margin="701,287,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="42"/>
        <Label Content="生成语音位置" FontSize="14" HorizontalAlignment="Left" Margin="190,287,0,0" VerticalAlignment="Top"/>

        <Button Name="生成对应语音" Content="生成对应语音" HorizontalAlignment="Left" Margin="626,314,0,0" VerticalAlignment="Top" Width="117" Height="29" IsEnabled="False" />
        <Button Name="测试播放语音" Content="测试播放语音" HorizontalAlignment="Left" Margin="509,314,0,0" VerticalAlignment="Top" Width="117" Height="29" IsEnabled="False" />



    </Grid>
</UserControl>
